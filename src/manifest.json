{
	"name": "Twic",
	"description": "__MSG_manifest_description__",
	"manifest_version": 2,
	"version": "0.70",
	"minimum_chrome_version": "32",
	"default_locale": "en",
	"homepage_url": "https://github.com/silentroach/twic",
	"icons": {
		"128": "img/_generated/icons/128.png",
		"64": "img/_generated/icons/64.png",
		"48": "img/_generated/icons/48.png",
		"32": "img/_generated/icons/32.png",
		"24": "img/_generated/icons/24.png",
		"16": "img/_generated/icons/16.png"
	},
	"browser_action": {
		"default_icon": {
			"19": "img/_generated/toolbar.png",
			"38": "img/_generated/toolbar@x2.png"
		},
		"default_popup": "popup.html"
	},
	"options_page": "options.html",
	"background": {
		"scripts": [
			"js/_init.js",
			"js/3rdparty/SHA1.js",
			"js/3rdparty/async.js",
			"js/common/global.js",
			"js/common/Event.js",
			"js/common/Event/Emitter.js",
			"js/common/Event/Dispatcher.js",
			"js/common/utils.js",
			"js/common/Timestamp.js",
			"js/common/Error.js",
			"js/background/keys.js",
			"js/background/Request.js",
			"js/background/Request/Error.js",
			"js/background/Request/OAuth.js",
			"js/background/Request/OAuth/Token.js",
			"js/background/twitter.js",
			"js/background/twitter/api.js",
			"js/background/Model.js",
			"js/background/User.js",
			"js/background/Tweet.js",
			"js/background/Model/List.js",
			"js/background/Timeline.js",
			"js/background/Mentions.js",
			"js/background/Account.js",
			"js/background/Account/List.js",
			"js/background/db.js",

			"js/background.js"
		]
	},
	"content_scripts": [ {
		"matches": [
			"https://api.twitter.com/oauth/authorize"
		],
		"js": [
			"js/_init.js",
			"js/common/global.js",
			"js/common/Event.js",
			"js/common/i18n.js",
			"js/inline/auth.js"
		],
		"css": [
			"css/inline/auth.css"
		]
	} ],
	"permissions": [
		"storage",

		"https://api.twitter.com/1/*",
		"https://twitter.com/oauth/*"
	]
}
